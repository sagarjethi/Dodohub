# DoDoHub - Environment Variables Configuration
# Copy this file to .env and fill in your values

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=development
APP_NAME=DoDoHub
APP_URL=http://localhost:3000

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/dodohub
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=dodohub
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password_here

# Database Pool Settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================
# JWT Secret (Generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_change_this
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Session Secret
SESSION_SECRET=your_session_secret_here_change_this

# Encryption Key (32 characters)
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ==============================================
# API GATEWAY
# ==============================================
GATEWAY_PORT=4000
GATEWAY_URL=http://localhost:4000

# ==============================================
# MICROSERVICES PORTS
# ==============================================
AUTH_SERVICE_PORT=8081
AUTH_SERVICE_URL=http://localhost:8081

MEDIA_SERVICE_PORT=8082
MEDIA_SERVICE_URL=http://localhost:8082

AI_SERVICE_PORT=8083
AI_SERVICE_URL=http://localhost:8083

SEARCH_SERVICE_PORT=8084
SEARCH_SERVICE_URL=http://localhost:8084

COMMERCE_SERVICE_PORT=8085
COMMERCE_SERVICE_URL=http://localhost:8085

DOWNLOAD_SERVICE_PORT=8086
DOWNLOAD_SERVICE_URL=http://localhost:8086

# ==============================================
# FRONTEND APPLICATIONS
# ==============================================
CONTRIBUTOR_WEB_PORT=3001
CONTRIBUTOR_WEB_URL=http://localhost:3001

BUYER_WEB_PORT=3000
BUYER_WEB_URL=http://localhost:3000

ADMIN_CONSOLE_PORT=3002
ADMIN_CONSOLE_URL=http://localhost:3002

# ==============================================
# AWS SERVICES
# ==============================================
# AWS Credentials
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# S3 Storage
S3_BUCKET_NAME=dodohub-assets
S3_BUCKET_REGION=us-east-1
S3_PUBLIC_URL=https://dodohub-assets.s3.amazonaws.com

# CloudFront CDN
CLOUDFRONT_DOMAIN=your_cloudfront_domain.cloudfront.net

# ==============================================
# PAYMENT GATEWAYS
# ==============================================
# Stripe
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Razorpay (Alternative)
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_secret_here

# ==============================================
# AI & ML SERVICES
# ==============================================
# OpenAI (for AI tagging)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Hugging Face (for models)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Model Paths
CLIP_MODEL_PATH=./models/clip
BLIP_MODEL_PATH=./models/blip

# ==============================================
# SEARCH & INDEXING
# ==============================================
# OpenSearch / Elasticsearch
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin

# Vector Database (Pinecone/Weaviate)
VECTOR_DB_URL=http://localhost:8080
VECTOR_DB_API_KEY=your_vector_db_api_key_here

# ==============================================
# BLOCKCHAIN CONFIGURATION
# ==============================================
# Ethereum/Polygon
BLOCKCHAIN_NETWORK=polygon-mumbai
BLOCKCHAIN_RPC_URL=https://rpc-mumbai.maticvigil.com
BLOCKCHAIN_PRIVATE_KEY=your_private_key_here_never_commit_this
BLOCKCHAIN_CONTRACT_ADDRESS=0x_your_contract_address_here

# ==============================================
# EMAIL SERVICES
# ==============================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM=noreply@dodohub.io

# SendGrid (Alternative)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# ==============================================
# MONITORING & LOGGING
# ==============================================
# Sentry (Error Tracking)
SENTRY_DSN=https://your_sentry_dsn_here

# Log Level
LOG_LEVEL=info

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3003
GRAFANA_ADMIN_PASSWORD=admin

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# FILE UPLOAD SETTINGS
# ==============================================
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,video/mp4,video/quicktime
UPLOAD_DIRECTORY=./uploads

# ==============================================
# CORS SETTINGS
# ==============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002
CORS_CREDENTIALS=true

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_BLOCKCHAIN=true
ENABLE_AI_TAGGING=true
ENABLE_PAYMENTS=true
ENABLE_EMAIL=false

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
DEBUG=true
VERBOSE_LOGGING=false

# ==============================================
# PRODUCTION SETTINGS (Comment out in development)
# ==============================================
# NODE_ENV=production
# DEBUG=false
# SECURE_COOKIES=true
# HTTPS_ONLY=true
