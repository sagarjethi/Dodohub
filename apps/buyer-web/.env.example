# Buyer Web App - Environment Variables
# Copy this file to .env.local

# API Gateway
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_GATEWAY_URL=http://localhost:4000/graphql

# Services
NEXT_PUBLIC_SEARCH_SERVICE_URL=http://localhost:8084
NEXT_PUBLIC_COMMERCE_SERVICE_URL=http://localhost:8085
NEXT_PUBLIC_DOWNLOAD_SERVICE_URL=http://localhost:8086

# App Settings
NEXT_PUBLIC_APP_NAME=DoDoHub
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Stripe (Public Key Only)
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here

# Feature Flags
NEXT_PUBLIC_ENABLE_CART=true
NEXT_PUBLIC_ENABLE_BLOCKCHAIN_BADGE=true
NEXT_PUBLIC_ENABLE_PREVIEW_DOWNLOAD=true
