# Contributor Web App - Environment Variables
# Copy this file to .env.local

# API Gateway
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_GATEWAY_URL=http://localhost:4000/graphql

# Services
NEXT_PUBLIC_MEDIA_SERVICE_URL=http://localhost:8082
NEXT_PUBLIC_AUTH_SERVICE_URL=http://localhost:8081

# App Settings
NEXT_PUBLIC_APP_NAME=DoDoHub Contributor
NEXT_PUBLIC_APP_URL=http://localhost:3001

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=104857600
NEXT_PUBLIC_ALLOWED_TYPES=image/jpeg,image/png,image/webp,video/mp4

# Feature Flags
NEXT_PUBLIC_ENABLE_KYC=true
NEXT_PUBLIC_ENABLE_BULK_UPLOAD=true
